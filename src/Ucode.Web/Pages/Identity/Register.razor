@page "/comecar"
@layout HeadLessLayout
@inherits RegisterPage

<PageTitle>Ucode - Login</PageTitle>
<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-1 pt-1">
                <img src="imgs/Ucode.webp"
                     width="200" />
            </div>
            <div class="d-flex justify-center">
                <h4>Ucode - Controle de Modulo de Alunos</h4> <!-- Texto visível na tela -->
            </div>
            <EditForm Model ="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email"  />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"                      
                              @bind-Value="InputModel.Password" />

                <div class="d-flex mt-4">
                   @if(IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                   {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Criar Login</MudButton>
                        <MudSpacer />
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/login">Já tenho login</MudButton>
                   }
                </div>
            </EditForm>
           
        </MudPaper>
    </MudItem>
</MudGrid>

